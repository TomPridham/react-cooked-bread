{
  "name": "react-cooked-bread",
  "version": "0.1.12",
  "description": "Customizable Toasts for React",
  "keywords": [
    "react",
    "toasts",
    "notifications",
    "popups"
  ],
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "browser": "dist/index.umd.js",
  "typings": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "author": "brett <brettinternet@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/brettinternet/react-cooked-bread"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "build": "tsc --module commonjs && cross-env NODE_ENV=production rollup -c",
    "clean": "rimraf dist docs coverage",
    "docs": "typedoc --out docs --target es6 --theme minimal --mode file src",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "start": "cross-env NODE_ENV=development rollup -c -w",
    "test": "jest",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "test:watch": "jest --watch"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "dependencies": {
    "@emotion/core": "^10.0.28",
    "react-transition-group": "^4.4.1"
  },
  "peerDependencies": {
    "prop-types": ">= 15.x.x",
    "react": ">= 16.8.x",
    "react-dom": ">= 16.8.x"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@types/jest": "^23.3.2",
    "@types/node": "^10.17.27",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "@types/react-transition-group": "^4.4.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "jest": "^23.6.0",
    "jest-config": "^23.6.0",
    "rimraf": "^2.6.2",
    "rollup": "^2.22.0",
    "rollup-plugin-analyzer": "^3.3.0",
    "rollup-plugin-typescript2": "^0.27.1",
    "rollup-plugin-visualizer": "^4.0.4",
    "ts-jest": "^23.10.2",
    "typedoc": "^0.17.8",
    "typescript": "^3.9.7"
  }
}
