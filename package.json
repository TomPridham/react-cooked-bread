{
  "name": "react-cooked-bread",
  "description": "Customizable Toasts for React",
  "private": true,
  "author": "brett <brettinternet@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com:brettinternet/react-cooked-bread.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "lint": "eslint '*/**/*.{js,ts,tsx}'",
    "setup": "lerna bootstrap --hoist && lerna link --force-local",
    "build": "lerna run build",
    "clean": "lerna run clean && lerna clean -y",
    "start": "lerna run start --parallel",
    "test": "lerna run test",
    "publish": "lerna run publish",
    "commit": "git-cz"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^7.1.2",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/fs-extra": "^8.1.1",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "commitizen": "^3.0.0",
    "coveralls": "^3.0.2",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.18.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "fs-extra": "^8.1.0",
    "husky": "^1.0.1",
    "lerna": "^3.22.1",
    "lint-staged": "^8.0.0",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  }
}
